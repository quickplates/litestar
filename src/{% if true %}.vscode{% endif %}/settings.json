{
  // Exclude Trunk generated files
  "files.exclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  // Exclude Trunk generated files
  "files.watcherExclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  // Set default Python interpreter to the one in the virtual environment
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  // Don't activate the virtual environment by VS Code
  "python.terminal.activateEnvironment": false,
  "python.terminal.activateEnvInCurrentTerminal": false,
  // Enable pytest for testing
  "python.testing.pytestEnabled": true
}
